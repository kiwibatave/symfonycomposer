{% extends "BCPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil {{ parent() }}
{% endblock %}

{% block bcplatform_body %}

    <h2>List of ads</h2>

    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('bc_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                by {{ advert.author }},
                the {{ advert.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>No ads (yet)</li>
        {% endfor %}
    </ul>

    <ul class="pagination">
        {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('bc_platform_home', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}

